<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".SignInActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_emailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_email"
            android:layout_marginStart="@dimen/activity_double_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_double_horizontal_margin"
            android:fontFamily="@font/gothicregular"
            android:inputType="textEmailAddress"
            android:text="example@email.com"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_password"
            android:layout_marginStart="@dimen/activity_double_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_double_horizontal_margin"
            android:fontFamily="@font/gothicregular"
            android:inputType="textPassword"
            android:text="example@email.com"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_double_horizontal_margin"
            android:src="@mipmap/logo_walk_screen" />

        <LinearLayout
            android:id="@+id/ll_social_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/use_social_profile"
            android:layout_marginStart="@dimen/activity_double_horizontal_margin"
            android:layout_marginTop="@dimen/activity_double_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_double_horizontal_margin"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/activity_margin_half"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/google_red"
                app:cardCornerRadius="@dimen/nav_header_vertical_spacing">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/appbar_padding"
                    android:fontFamily="@font/gothicbold"
                    android:gravity="center"
                    android:paddingTop="@dimen/activity_horizontal_margin"
                    android:paddingBottom="@dimen/activity_horizontal_margin"
                    android:text="@string/google"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/white"
                    app:drawableStartCompat="@mipmap/ic_google" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/activity_margin_half"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/fb_blue"
                app:cardCornerRadius="@dimen/nav_header_vertical_spacing">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/appbar_padding"
                    android:fontFamily="@font/gothicbold"
                    android:gravity="center"
                    android:paddingTop="@dimen/activity_horizontal_margin"
                    android:paddingBottom="@dimen/activity_horizontal_margin"
                    android:text="@string/facebook"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/white"
                    app:drawableStartCompat="@mipmap/ic_facebook" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_social_login"
            android:layout_marginStart="@dimen/activity_double_horizontal_margin"
            android:layout_marginTop="@dimen/activity_double_horizontal_margin"
            android:fontFamily="@font/gothicbold"
            android:text="@string/forgot_password__" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_alignEnd="@+id/ll_social_login"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_social_login"
            android:layout_marginStart="@dimen/activity_double_horizontal_margin"
            android:layout_marginTop="@dimen/activity_double_horizontal_margin"
            android:fontFamily="@font/gothicbold"
            android:textColor="@color/green"
            android:text="@string/sign_up" />

        <TextView
            android:id="@+id/nice_to_see_you_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sign_in_text"
            android:layout_marginStart="@dimen/activity_double_horizontal_margin"
            android:layout_marginTop="@dimen/appbar_padding"
            android:fontFamily="@font/gothicbold"
            android:text="@string/hi_there_nice_to_see_you_again"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/txt_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nice_to_see_you_text"
            android:layout_marginStart="@dimen/activity_double_horizontal_margin"
            android:layout_marginTop="@dimen/activity_double_horizontal_margin"
            android:fontFamily="@font/gothicregular"
            android:text="@string/email"
            android:textColor="@color/green" />

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/appbar_padding_top"
            android:fontFamily="@font/gothicbold"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <TextView
            android:id="@+id/txt_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_emailAddress"
            android:layout_marginStart="@dimen/activity_double_horizontal_margin"
            android:layout_marginTop="@dimen/activity_double_horizontal_margin"
            android:fontFamily="@font/gothicregular"
            android:text="@string/password"
            android:textColor="@color/green" />

        <TextView
            android:id="@+id/sign_in_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_name"
            android:layout_marginStart="@dimen/activity_double_horizontal_margin"
            android:layout_marginTop="@dimen/activity_double_horizontal_margin"
            android:fontFamily="@font/gothicbold"
            android:text="@string/sign_in"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/use_social_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cv_sign_in"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/activity_double_horizontal_margin"
            android:layout_marginTop="@dimen/activity_double_horizontal_margin"
            android:fontFamily="@font/gothicbold"
            android:text="@string/or_use_one_of_your_social_profiles"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_password"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/activity_double_horizontal_margin"
            android:layout_marginTop="@dimen/activity_double_horizontal_margin"
            android:layout_marginRight="@dimen/activity_double_horizontal_margin"
            android:background="@color/primaryColour"
            app:cardBackgroundColor="@color/green"
            app:cardCornerRadius="@dimen/nav_header_vertical_spacing">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/gothicbold"
                android:gravity="center"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:text="@string/sign_in"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/white" />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</ScrollView>